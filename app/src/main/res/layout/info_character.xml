<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/img_character"
        android:layout_width="150dp"
        android:layout_height="140dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="31dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@color/design_default_color_background"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/name_character"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="31dp"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintStart_toEndOf="@+id/img_character"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/status_character"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/img_character"
        app:layout_constraintTop_toBottomOf="@+id/name_character" />

    <TextView
        android:id="@+id/raza_character"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/img_character"
        app:layout_constraintTop_toBottomOf="@+id/status_character" />

    <TextView
        android:id="@+id/side_character"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/img_character"
        app:layout_constraintTop_toBottomOf="@+id/raza_character" />

    <TextView
        android:id="@+id/sex_character"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_character" />

    <TextView
        android:id="@+id/origin_character"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:text="Origin:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sex_character" />

    <TextView
        android:id="@+id/Loc_character"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="64dp"
        android:text="Location:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/origin_character" />

    <Button
        android:id="@+id/btn_origin"
        android:layout_width="125dp"
        android:layout_height="52dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="64dp"
        android:backgroundTint="#D0009688"
        android:text="Button"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/origin_character"
        app:layout_constraintTop_toBottomOf="@+id/img_character" />

    <Button
        android:id="@+id/btn_location"
        android:layout_width="125dp"
        android:layout_height="52dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="#D7009688"
        android:text="Button"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/Loc_character"
        app:layout_constraintTop_toBottomOf="@+id/btn_origin" />
</androidx.constraintlayout.widget.ConstraintLayout>